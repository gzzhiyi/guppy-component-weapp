<view class="page">
	<view class="box">
    <view class="box__title">
			已选城市：{{ current }}
		</view>
		<g-checkbox
			current="{{current}}"
			items="{{items}}"
			mode="{{mode}}"
			type="{{type}}"
			bind:change="onChange"
		/>
	</view>

	<button class="btn" catchtap="handleClear">清空已选项</button>
	<button class="btn" catchtap="handleChangeMode">切换排列方式</button>
</view>