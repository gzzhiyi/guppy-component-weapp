page {
  background-color: #f9f9f9;
}

.page {
  padding: 40rpx;
}

.box {
  margin-bottom: 40rpx;
}
.box__title {
  margin-bottom: 20rpx;
  color: #666;
  font-size: 32rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}
.btn:last-child {
  margin-bottom: 0;
}

.grid {
  display: flex;
  flex-wrap: wrap;
}
.col {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  width: 33%;
  padding: 40rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
}
